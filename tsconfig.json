{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "gm-touch": ["components/index.tsx"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "lib": ["dom", "es2020"],
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "exclude": ["node_modules", "locales"],
  "include": ["**/*.ts", "**/*.tsx"]
}
